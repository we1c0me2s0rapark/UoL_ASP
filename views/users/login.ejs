    console.log(data);
    if (data == "email") {
        document.getElementById('inputNotification').innerText = "Your email not found! Try again";
    } else if (data == "password") {
        document.getElementById('inputNotification').innerText = "Your password not matched! Try again";
    }
</script>
</html>
